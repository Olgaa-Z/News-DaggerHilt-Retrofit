<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cardNews"
    app:cardCornerRadius="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgNews"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <TextView
            android:id="@+id/titleNews"
            android:text="Judul News"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/imgNews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/dateNews"
            android:text="30 Dec 1994"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/imgNews"
            android:layout_below="@+id/titleNews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/authorNews"
            android:text="30 Dec 1994"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/imgNews"
            android:layout_below="@+id/dateNews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>